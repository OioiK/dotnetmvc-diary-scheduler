@model DiaryScheduler.Web.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}

<div class="container">
    @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "card", role = "form" }))
    {
        <div class="card-body">
            @Html.AntiForgeryToken()
            @Html.Hidden("provider", @Model.Provider)
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h4 class="card-title">Enter verification code</h4>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Code)
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.RememberBrowser, new { @class = "form-check-label" })
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-secondary" type="submit">Submit</button>
        </div>
    }
</div>